<h3>Adresses</h3>
<div class="text-right">
    <a href="" data-toggle="modal" data-target="#addAdresseModal"><i class="fa fa-plus"></i> Ajouter une adresse</a>
</div>
<hr>
<div id="addAdresseModal" class="modal fade" role="dialog">
    <div class="modal-dialog">


        <div class="modal-content">
            <!-- Modal content-->
            {{ render(controller(
    'App\\Controller\\Front\\AdressesUserController::newAdresseUser'
)) }}
        </div>

    </div>
</div>
{% if (adresses|length > 0) %}
    <div class="block-list-adresse">
        {% for adresse in adresses %}
            <div id="adresse{{adresse.id}}">
                <div class="text-left"> 
                    <i class="fa fa-map-marker"></i> {{ adresse.rue }}  {% if(adresse.residence) %}, r√©sidence {{adresse.residence}}{% endif %} {{ adresse.ville }} - {{ adresse.gouvernaurat }}, {{ adresse.pays }} 
                </div>
                <div class="text-right">
                    <button type="button" class="main-btn" data-toggle="modal" data-target="#editAdresseModal{{adresse.id}}"><i class="fa fa-pencil"></i></button>
                    <a href="{{ path('adresses_user_delete', {id : adresse.id}) }}" class="main-btn delete-adress"><i class="fa fa-trash-o"></i></a>
                </div>
                <div id="editAdresseModal{{adresse.id}}" class="modal fade edit-adress-modal" role="dialog">
                    <div class="modal-dialog">


                        <div class="modal-content">
                            <!-- Modal content-->
                            {{ render(controller(
                                'App\\Controller\\Front\\AdressesUserController::editAdresseUser',
                                    { 'id': adresse.id }
                            )) }}
                        </div>

                    </div>
                </div>
                <hr>
            </div>
        {% endfor %}
    </div>
{% else %}
    <h4 class="text-center">Aucune adresse</h4>
{% endif %}


