{% block title %}Tableau de bord | {{store.name}} paramétres{% endblock %}
{% block body %}>
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <!-- BEGIN PAGE HEAD -->
            <div class="page-head">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>{{store.name}} <small>Paramétres</small></h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
            <!-- END PAGE HEAD -->
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <a href="{{ path('backoffice_homepage') }}">Tableau de bord</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="{{ path('dashboard_stores_back_index') }}">Marchands</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="{{ path('dashboard_stores_back_details', {id:store.id}) }}">{{ store.name }}</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    Paramétres
                </li>
            </ul>
            <!-- END PAGE BREADCRUMB -->
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
                <div class="col-md-12">
                    <form class="form-horizontal form-row-seperated" action="{{ path('dashboard_stores_back_edit_traitement', {id:store.id}) }}" method="post" role="form" enctype="multipart/form-data">
                        <div class="portlet light">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="icon-basket font-green-sharp"></i>
                                    <span class="caption-subject font-green-sharp bold uppercase">
                                        {{store.name}} </span>
                                    <span class="caption-helper">Paramétres</span>
                                </div>
                                <div class="actions btn-set">
                                    <a class="btn green-haze btn-circle" href="{{ path('dashboard_stores_back_index') }}">
                                        <i class="fa fa-list"></i> Tous </a>
                                </div>
                            </div>
                            <div class="portlet-body">
                                <div class="tabbable">
                                    <ul class="nav nav-tabs">
                                        <li class="active">
                                            <a href="#tab_general" data-toggle="tab">
                                                Propriétaire </a>
                                        </li>
                                        <li>
                                            <a href="#tab_meta" data-toggle="tab">
                                                Boutique </a>
                                        </li>
                                        <li>
                                            <a href="#tab_images" data-toggle="tab">
                                                Adresses Boutique
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#tab_reviews" data-toggle="tab">
                                                Télephones boutique
                                            </a>
                                        </li>
                                    </ul>
                                    <div class="tab-content no-space">
                                        <div class="tab-pane active" id="tab_general">
                                            <div class="form-body">
                                                <h3>Propriétaire</h3>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label">Nom: <span class="required">
                                                            * </span>
                                                    </label>
                                                    <div class="col-md-10">
                                                        <input type="text" class="form-control" name="nom" placeholder="" value="{{store.marchand.user.nom}}">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label">Prenom: <span class="required">
                                                            * </span>
                                                    </label>
                                                    <div class="col-md-10">
                                                        <input type="text" class="form-control" name="prenom" placeholder="" value="{{store.marchand.user.prenom}}">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label">Username: <span class="required">
                                                            * </span>
                                                    </label>
                                                    <div class="col-md-10">
                                                        <input type="text" class="form-control" name="username" placeholder="" value="{{store.marchand.user.username}}">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label">Email: <span class="required">
                                                            * </span>
                                                    </label>
                                                    <div class="col-md-10">
                                                        <input type="email" class="form-control" name="email" placeholder="" value="{{store.marchand.user.email}}">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane" id="tab_meta">
                                                <h3>Boutique</h3>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label>Nom</label>
                                                            <input type="text" class="form-control" placeholder="Nom" name="storenom" value="{{store.name}}">
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Déscription</label>
                                                            <textarea class="form-control" rows="3" name="descriptionC"> {{store.description}}</textarea>
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Numéro de registre commerciale</label>
                                                            <input type="text" class="form-control" value="{{store.marchand.nrc}}" placeholder="Numéro de registre commerciale" name="nrc">
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Matricule fiscale</label>
                                                            <input type="text" class="form-control" value="{{store.marchand.matriculeFiscale}}" placeholder="Matricule fiscale" name="matricule">
                                                        </div>
                                                        
                                                    </div>
                                                    <div class="col-md-6">
                                                        <label>Logo</label> <br>
                                                        <div class="fileinput fileinput-new" data-provides="fileinput">
                                                            <div class="input-group input-large">
                                                                <div class="form-control uneditable-input span3" data-trigger="fileinput">
                                                                    <i class="fa fa-file fileinput-exists"></i>&nbsp; <span class="fileinput-filename">
                                                                    </span>
                                                                </div>
                                                                <span class="input-group-addon btn default btn-file">
                                                                    <span class="fileinput-new">
                                                                        Sélectionner une image </span>
                                                                    <span class="fileinput-exists">
                                                                        Changer </span>
                                                                    <input type="file" name="iconeC">
                                                                </span>
                                                                <a href="javascript:;" class="input-group-addon btn red fileinput-exists" data-dismiss="fileinput">
                                                                    Supprimer </a>
                                                            </div>
                                                        </div>
                                                        <label>Photo de couverture</label> <br>
                                                        <div class="fileinput fileinput-new" data-provides="fileinput">
                                                            <div class="input-group input-large">
                                                                <div class="form-control uneditable-input span3" data-trigger="fileinput">
                                                                    <i class="fa fa-file fileinput-exists"></i>&nbsp; <span class="fileinput-filename">
                                                                    </span>
                                                                </div>
                                                                <span class="input-group-addon btn default btn-file">
                                                                    <span class="fileinput-new">
                                                                        Sélectionner une image </span>
                                                                    <span class="fileinput-exists">
                                                                        Changer </span>
                                                                    <input type="file" name="couvertureC">
                                                                </span>
                                                                <a href="javascript:;" class="input-group-addon btn red fileinput-exists" data-dismiss="fileinput">
                                                                    Supprimer </a>
                                                            </div>
                                                        </div>
                                                        
                                                    </div>
                                        </div>
                                        <div class="tab-pane" id="tab_images">
                                            <h3>Adresses boutique</h3>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="pull-right">
                                                        <button type="button" class="btn btn-primary" id="addAdresseInput"><i class="fa fa-plus"></i> Ajouter une adresse</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="adresses">
                                                {% for adresse in store.adressesStore %}
                                                <div class="blocAdresse{{adresse.id}}" style="margin-bottom: 10px;">
                                                    
                                                        <div class="row">
                                                            <div class="col-md-6 col-sm-9">
                                                                <input class="form-control" name="adresses[]" placeholder="adresse" value="{{adresse.rue}}">
                                                            </div>
                                                            <div class="col-md-3 col-sm-3">
                                                                <button type="button" class="btn btn-danger" id="deleteAdresseInput{{adresse.id}}"><i class="fa fa-trash"></i></button>
                                                            </div>
                                                        </div>
                                                            </div>
                                                    {% endfor %}
                                                
                                            </div>
                                        </div>
                                        <div class="tab-pane" id="tab_reviews">
                                            <h3>Télephones boutiques</h3>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="pull-right">
                                                        <button type="button" class="btn btn-primary" id="addPhoneInput"><i class="fa fa-plus"></i> Ajouter un numéro</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="phones">
                                                {% for phone in store.telephonesStore %}
                                                <div class="blocPhone{{phone.id}}" style="margin-bottom: 10px;">
                                                <div class="row">
                                                    <div class="col-md-6 col-sm-9">
                                                        <input type="number" maxlength="8" value="{{phone.numero}}" class="form-control" name="phones[]" placeholder="Numéro">
                                                    </div>
                                                    <div class="col-md-3 col-sm-3">
                                                        <button type="button" class="btn btn-danger" id="deletePhoneInput{{phone.id}}"><i class="fa fa-trash"></i></button>
                                                    </div>
                                                </div>
                                                </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-success pull-right">Enregistrer</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- END PAGE CONTENT-->
        </div>
    </div>
    <!-- END CONTENT -->
{% endblock %}
