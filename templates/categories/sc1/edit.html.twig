{% block title %}Tableau de bord | Nouvelle catégorie{% endblock %}
{% block body %}>
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <!-- BEGIN PAGE HEAD -->
            <div class="page-head">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>Catégories <small>Ajout</small></h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
            <!-- END PAGE HEAD -->
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <a href="{{ path('backoffice_homepage') }}">Tableau de bord</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="{{ path('dashboard_categories_index') }}">Catégories</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="{{ path('dashboard_categories_details', {id : categorie.categorieMere.id}) }}">{{categorie.categorieMere.name}}</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="{{ path('dashboard_sc1_details', {id : categorie.id}) }}">{{categorie.name}}</a>
                    <i class="fa fa-circle"></i>
                <li>Paramétres
                </li>
            </ul>
            <!-- END PAGE BREADCRUMB -->
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box green-haze">
                        <div class="portlet-title">
                            <div class="caption">
                                {{ categorie.name }}
                            </div>
                            <div class="tools">
                                <a href="{{ path('dashboard_sc1_details', {id:categorie.id}) }}" style="color: #FFF;font-size: 14px;" title="ajouter une catégorie">
                                    <i class="fa fa-search"></i> Infos
                                </a>
                                    <a href="{{ path('dashboard_categories_details', {id : categorie.categorieMere.id}) }}" style="color: #FFF;font-size: 14px;" title="ajouter une catégorie">
                                    <i class="fa fa-list-ul"></i> Tous
                                </a>
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <form action="{{ path('dashboard_sc1_edit_traitement', {id:categorie.id}) }}" method="post" role="form" enctype="multipart/form-data">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Catégorie</label>
                                                <select name="cm" class="form-control">
                                                    {% for cm in cms %}
                                                        <option value="{{cm.id}}" {{categorie.categorieMere.id == cm.id?'selected="true"':''}}>{{cm.name}}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Nom</label>
                                                <input type="text" class="form-control" placeholder="Nom" name="nom" value="{{ categorie.name }}">
                                            </div>
                                            <div class="form-group">
                                                <label>Déscription</label>
                                                <textarea class="form-control" rows="3" name="descriptionC">{{ categorie.content }}</textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label>Image</label> <br>
                                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                                <div class="input-group input-large">
                                                    <div class="form-control uneditable-input span3" data-trigger="fileinput">
                                                        <i class="fa fa-file fileinput-exists"></i>&nbsp; <span class="fileinput-filename">
                                                        </span>
                                                    </div>
                                                    <span class="input-group-addon btn default btn-file">
                                                        <span class="fileinput-new">
                                                            Sélectionner une image </span>
                                                        <span class="fileinput-exists">
                                                            Changer </span>
                                                        <input type="file" name="iconeC" value="{{ categorie.icone }}">
                                                    </span>
                                                    <a href="javascript:;" class="input-group-addon btn red fileinput-exists" data-dismiss="fileinput">
                                                        Supprimer </a>
                                                </div>
                                            </div>
                                            <label>Photo de couverture</label> <br>
                                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                                <div class="input-group input-large">
                                                    <div class="form-control uneditable-input span3" data-trigger="fileinput">
                                                        <i class="fa fa-file fileinput-exists"></i>&nbsp; <span class="fileinput-filename">
                                                        </span>
                                                    </div>
                                                    <span class="input-group-addon btn default btn-file">
                                                        <span class="fileinput-new">
                                                            Sélectionner une image </span>
                                                        <span class="fileinput-exists">
                                                            Changer </span>
                                                        <input type="file" name="couvertureC" value="{{ categorie.image }}">
                                                    </span>
                                                    <a href="javascript:;" class="input-group-addon btn red fileinput-exists" data-dismiss="fileinput">
                                                        Supprimer </a>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-success" style="width: 100%;">Enregistrer</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
            <!-- END PAGE CONTENT-->
        </div>
    </div>
    <!-- END CONTENT -->
{% endblock %}
