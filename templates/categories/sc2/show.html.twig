    <!-- END PAGE LEVEL STYLES -->
{% endblock %}
{% block title %}Tableau de bord | {{categorie.name}}{% endblock %}
{% block body %}>
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <!-- BEGIN PAGE HEAD -->
            <div class="page-head">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>{{ categorie.name }} <small>Détails</small></h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
            <!-- END PAGE HEAD -->
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <a href="{{ path('backoffice_homepage') }}">Tableau de bord</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="{{ path('dashboard_categories_index') }}">Catégories</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="#">{{ categorie.name }}</a>
                </li>
            </ul>
            <!-- END PAGE BREADCRUMB -->
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box green-haze">
                        <div class="portlet-title">
                            <div class="caption">
                                {{ categorie.name }}
                            </div>
                            <div class="tools">
                                <a href="{{ path('dashboard_categories_index') }}" style="color: #FFF;font-size: 14px;" title="ajouter une catégorie">
                                    <i class="fa fa-list-ul"></i> Tous
                                </a>
                                <a href="{{ path('dashboard_categories_edit', {id : categorie.id}) }}" style="color: #FFF;font-size: 14px;" title="Modifier">
                                    <i class="fa fa-edit"></i> Modifier
                                </a>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="row">
                                <div class="col-md-12">
                                    {% if app.session.flashBag.has('success') %}
                                        <div class="alert alert-success">
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                            {% for msg in app.session.flashBag.get('success') %}
                                                <i class="fa fa-check"></i> {{ msg }}
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                                <form action="#" class="form-horizontal form-bordered">
                                    <div class="form-body">
                                        <div class="text-right">
                                            <div class="form-group">
                                                <label class="control-label col-md-9"><b style="font-size: 18px;">Afficher les banniéres des produits dans la page d'acceuil ?</b></label>
                                                <div class="col-md-3">
                                                    <input type="checkbox" {{ categorie.hasBanner == 1?'checked':'' }} id="InIndex" value="{{ categorie.id }}" class="make-switch" data-size="large" data-on-text="&nbsp;Oui&nbsp;" data-off-text="&nbsp;Non&nbsp;">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                    
                            
                            <div class="row">
                                <div class="col-md-3">
                                    <img src="{{ asset('/uploads/categories/cm/') }}{{ categorie.icone }}" style="width: 100%;height: 250px;">
                                </div>
                                <div class="col-md-9">
                                    <img src="{{ asset('/uploads/categories/cm/') }}{{ categorie.image }}" style="width: 100%;height: 250px;">
                                </div>
                            </div>
                                <br>
                            <div class="row">
                                <div class="col-md-3">
                                    <h1>{{ categorie.name }}</h1>
                                </div>
                                <div class="col-md-9">
                                    {{ categorie.content }}
                                </div>
                            </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <hr>
                                        <h3>Produits</h3>
                                        <table class="table table-striped table-hover" id="sample_5">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Nom
                                                    </th>
                                                    <th>
                                                        Nombre de produits
                                                    </th>
                                                    <th>
                                                        Action
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for produit in categorie.Products %}
                                                    <tr>
                                                        <td>{{produit.name}}</td>
                                                        <td>{{produit.sousCategories|length}}</td>
                                                        <td></td>
                                                        <td>
                                                            <a href="{{ path('dashboard_categories_details', {id : sc.id}) }}" class="btn btn-sm btn-primary"><i class="fa fa-search"></i> Détails</a>
                                                            <a href="{{ path('dashboard_categories_edit', {id : sc.id}) }}" class="btn btn-sm btn-warning"><i class="fa fa-pencil"></i> Modifier</a>
                                                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#myModal{{sc.id}}"><i class="fa fa-trash"></i> Supprimer</button>

                                                            <!-- Modal -->
                                                            <div id="myModal{{sc.id}}" class="modal fade" role="dialog">
                                                              <div class="modal-dialog">

                                                                <!-- Modal content-->
                                                                <div class="modal-content">
                                                                  <div class="modal-header">
                                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                    <h4 class="modal-title">Suppression</h4>
                                                                  </div>
                                                                  <div class="modal-body">
                                                                    <p>Etes-vous sùre de vouloir supprimer la catégorie {{sc.name}} ?</p>
                                                                  </div>
                                                                  <div class="modal-footer">
                                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Non</button>
                                                                  </div>
                                                                </div>

                                                              </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
            <!-- END PAGE CONTENT-->
        </div>
    </div>
    <!-- END CONTENT -->
{% endblock %}
