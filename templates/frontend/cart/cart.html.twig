{% extends "base.html.twig" %}
{% block title %}Shopping LAND | Panier{% endblock %}
{% block stylesheets %}{% endblock %}
{% block body %}
    
    <!-- NAVIGATION -->
    {% include 'includes/front/nav.html.twig' %}

    <!-- /NAVIGATION -->
    <!-- BREADCRUMB -->
    <div id="breadcrumb">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="{{ path('index_page') }}">Sindbad</a></li>
                <li class="active">Panier</li>
            </ul>
        </div>
    </div>
    <!-- /BREADCRUMB -->



    <!-- section -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="order-summary clearfix">
                        <div class="section-title">
                            <h3 class="title">Panier</h3>
                        </div>
                        <table class="shopping-cart-table table">
                            <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th></th>
                                    <th class="text-center">Prix unitaire</th>
                                    <th class="text-center">Quantité</th>
                                    <th class="text-center">Total</th>
                                    <th class="text-right"></th>
                                </tr>
                            </thead>
                            <tbody class="table-list-products-in-cart">
                                {% if(products|length > 0) %}
                                    {% for product in products %}
                                        <form action="{{ path('change_qte', { 'id' : product.id }) }}" method="get">
                                            <tr class="product-in-cart{{ product.id }}" data-id="{{ product.id }}">
                                                <td class="thumb"><img src="{{ asset('uploads/products/images/') }}{{ product.image }}" alt=""></td>
                                                <td class="details">
                                                    <a href="{{ path('product_page', {id:product.id}) }}">{{ product.name }}</a>
                                                    {#<ul>
                                                        <li><span>Size: XL</span></li>
                                                        <li><span>Color: Camelot</span></li>
                                                    </ul>#}
                                                </td>
                                                <td class="price text-center"><strong>{{ product.price }} TND</strong><br>{#<del class="font-weak"><small>$40.00</small></del>#}</td>
                                                <td class="qty text-center">
                                                    <select name="qte" class="form-control" onchange="this.form.submit()">
                                                        <option selected value="{{ panier[product.id] }}">{{ panier[product.id] }}</option>
                                                        {% for i in 1..10 %}
                                                            <option value="{{i}}">{{i}}</option>
                                                        {% endfor %}
                                                    </select>
                                                </td>
                                                <td class="total text-center">
                                                    <strong class="primary-color">
                                                        <span class="total-product"></span> TND
                                                    </strong>
                                                    <input type="hidden" name="total" value="{{ product.price * panier[product.id] }}">
                                                </td>
                                                <td class="text-right"><button class="main-btn icon-btn cancel-product" data-id="{{ product.id }}"><i class="fa fa-close"></i></button></td>
                                            </tr>
                                        </form>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center"><strong>Votre panier est vide</strong></td>
                                    </tr>
                                {% endif %}
                            </tbody>
                            <tfoot>
                                {#<tr>
                                    <th class="empty" colspan="3"></th>
                                    <th>SUBTOTAL</th>
                                    <th colspan="2" class="sub-total">$97.50</th>
                                </tr>
                                <tr>
                                    <th class="empty" colspan="3"></th>
                                    <th>SHIPING</th>
                                    <td colspan="2">Free Shipping</td>
                                </tr>#}
                                <tr>
                                    <th class="empty" colspan="3"></th>
                                    <th>Total à payer</th>
                                    <th colspan="2" class="total"><span class="total-cart"></span> TND</th>
                                </tr>
                            </tfoot>
                        </table>
                        <div class="pull-right">
                            <a href="{{ path('index_page') }}" class="main-btn">Continuer mes achats</a>
                            <a href="{{ path('livraison_page') }}" class="primary-btn"> Commander <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>

                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /section -->
{% endblock %}
{% block javascripts %}
    {% set totalHT = 0 %}
    {% set totalTTC = 0%}
    {% set refTva = {} %}
    {% set panier = app.session.get('panier') %}
    {% for product in products %}
        {% set totalHT = totalHT + (product.price * panier[product.id]) %}
        {% set totalTTC = totalTTC + (product.price * panier[product.id]) %}
    {% endfor %}
{% endblock %}
