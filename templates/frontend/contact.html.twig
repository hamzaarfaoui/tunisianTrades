{% extends "base.html.twig" %}
{% block title %}Contactez nous{% endblock %}
{% block stylesheets %}{% endblock %}
{% block body %}
    <!-- NAVIGATION -->
    {{ render(controller('App\\Controller\\Front\\FrontController::navigation')) }}

    <!-- /NAVIGATION -->
    <!-- BREADCRUMB -->
    <div id="breadcrumb">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="{{ path('index_page') }}">EMOL</a></li>
                <li class="active">à propos</li>
            </ul>
        </div>
    </div>
    <!-- /BREADCRUMB -->



    <!-- section -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="order-summary clearfix">
                        <div class="section-title">
                            <h3 class="title">Contactez nous</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    {% if app.session.flashBag.has('success') %}
                                        <div class="alert alert-success">
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                            {% for msg in app.session.flashBag.get('success') %}
                                                <i class="fa fa-check"></i> {{ msg }}
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                                <form action="{{ path('contact_send') }}" method="post">
                                    <div class="col-md-6">
                                        <b>Nom</b><br>
                                        <input type="text" name="nom" class="form-control" placeholder="Nom"><br>
                                    </div>
                                    <div class="col-md-6">
                                        <b>Prenom</b><br>
                                        <input type="text" name="prenom" class="form-control" placeholder="Prenom"><br>
                                    </div>
                                    <div class="col-md-6">
                                        <b>E-mail</b><br>
                                        <input type="email" name="email" class="form-control" placeholder="E-mail"><br>
                                    </div>
                                    <div class="col-md-6">
                                        <b>Télephone</b><br>
                                        <input type="number" max="99999999" name="phone" class="form-control" placeholder="Télephone"><br>
                                    </div>
                                    <div class="col-md-12">
                                        <b>Votre message</b><br>
                                        <textarea name="msg" class="form-control" rows="6" placeholder="Votre message"></textarea><br><br>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="primary-btn" style="font-size: 18px;background-color: #2196f3;"><i class="fa fa-send"></i> Envoyer</button><br><br>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /section -->
{% endblock %}
{% block javascripts %}{% endblock %}
