{% if(commandes|length>0) %}
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption caption-md">
                <i class="icon-bar-chart theme-font hide"></i>
                <span class="caption-subject theme-font bold uppercase">Commandes</span>

            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-hover" id="sample_5">
                <thead>
                    <tr>
                        <th>
                            Client
                        </th>
                        <th>
                            Montant
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for commande in commandes %}
                        <tr>
                            <td>{{commande.client}}</td>
                            <td>{{commande.montant}} TND</td>
                            <td>Le {{commande.date|date('d/m/Y')}} à {{commande.date|date('H:i')}}</td>
                            <td>
                                <a href="{{ path('marchand_commandes_details', {id:commande.id, store:store}) }}" class="btn btn-sm btn-primary">Détails</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endif %}