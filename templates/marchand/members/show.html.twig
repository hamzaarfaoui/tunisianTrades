{% block title %}Tableau de bord | Détails member{% endblock %}
{% block body %}>
    <div class="page-container">
        <!-- BEGIN PAGE HEAD -->
        <div class="page-head">
            <div class="container">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>{{member.nom}} {{member.nom}}</h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
        </div>
        <!-- END PAGE HEAD -->
        <!-- BEGIN PAGE CONTENT -->
        <div class="page-content">
            <div class="container">
                <div class="portlet light">
                    <!-- BEGIN PAGE BREADCRUMB -->
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <a href="{{ path('marchand_homepage') }}">Tableau de bord</a><i class="fa fa-circle"></i>
                        </li>
                        <li>
                            <a href="{{ path('marchand_members_index',{id:app.user.id}) }}">Membres</a><i class="fa fa-circle"></i>
                        </li>
                        <li class="active">
                            {{member.nom}} {{member.nom}}
                            
                        </li>
                    </ul>
                    <!-- END PAGE BREADCRUMB -->
                    <!-- BEGIN PAGE CONTENT INNER -->
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box green-haze">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-globe"></i>{{member.nom}} {{member.nom}}
                            </div>
                            <div class="tools">
                                <a href="{{ path('marchand_members_edit', {id : member.id}) }}" style="color: #FFF;font-size: 14px;" title="ajouter un produit">
                                    <i class="fa fa-pencil"></i> Modifier
                                </a>
                                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteModal">Supprimer</button>

                                <!-- Modal -->
                                <div id="deleteModal" class="modal fade" role="dialog">
                                  <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                      <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title" style="color: black;">Suppression membre</h4>
                                      </div>
                                      <div class="modal-body">
                                          <div class="text-center">
                                              <p style="color: black;">Etes-vous sùre de vouloir supprimer le membre <b>{{member.nom}} {{member.prenom}}</b>?</p>
                                          </div>
                                      </div>
                                      <div class="modal-footer">
                                        <a href="{{ path('marchand_members_delete', {id : member.id}) }}" class="btn btn-danger">
                                             Oui
                                        </a>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Non</button>
                                      </div>
                                    </div>

                                  </div>
                                </div>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="row">
                                <div class="col-md-12">
                                    {% if app.session.flashBag.has('success') %}
                                        <div class="alert alert-success">
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                            {% for msg in app.session.flashBag.get('success') %}
                                                <i class="fa fa-check"></i> {{ msg }}
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                                <div class="text-right">
                                    <h4>Date de creation : <b>Le {{member.createdAt|date('d/m/Y')}} à {{member.createdAt|date('H:i')}}</b></h4>
                                {% if(member.updatedAt) %}
                                    <h4>Dérniére modification : <b>Le {{member.updatedAt|date('d/m/Y')}} à {{member.updatedAt|date('H:i')}}</b></h4>
                                {% endif %}
                                </div>
                                <hr>
                                <div class="text-left">
                                    <div class="row">
                                        <div class="col-md-6"><h4>Nom & prenom : <b>{{member.nom}} {{member.prenom}}</b></h4></div>
                                        <div class="col-md-6"><h4>E-mail : <b>{{member.email}}</b></h4></div>
                                        <div class="col-md-6"><h4>Username : <b>{{member.username}}</b></h4></div>
                                        <div class="col-md-6"><h4>Télephone : <b>{{member.phone}}</b></h4></div>
                                        <div class="col-md-6"><h4>Adresse : <b>{{member.adress}}</b></h4></div>
                                        <div class="col-md-6"><h4>Gouvernaurat : <b>{{member.city}}</b></h4></div>
                                    </div>
                                    
                                    
                                    
                                    
                                </div>
                        </div>
                                
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
            <!-- END PAGE CONTENT INNER -->
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT -->
    </div>
{% endblock %}
