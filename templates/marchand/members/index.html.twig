{% block title %}Tableau de bord | Membres{% endblock %}
{% block body %}>
    <div class="page-container">
        <!-- BEGIN PAGE HEAD -->
        <div class="page-head">
            <div class="container">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>Membres</h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
        </div>
        <!-- END PAGE HEAD -->
        <!-- BEGIN PAGE CONTENT -->
        <div class="page-content">
            <div class="container">
                <div class="portlet light">
                    <!-- BEGIN PAGE BREADCRUMB -->
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <a href="{{ path('marchand_homepage') }}">Tableau de bord</a><i class="fa fa-circle"></i>
                        </li>
                        <li class="active">
                            Membres
                            
                        </li>
                    </ul>
                    <!-- END PAGE BREADCRUMB -->
                    <!-- BEGIN PAGE CONTENT INNER -->
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box green-haze">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-globe"></i>Membres
                            </div>
                            <div class="tools">
                                <a href="{{ path('marchand_members_new') }}" style="color: #FFF;font-size: 14px;" title="ajouter un produit">
                                    <i class="fa fa-plus"></i> Ajouter
                                </a>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="row">
                                <div class="col-md-12">
                                    {% if app.session.flashBag.has('success') %}
                                        <div class="alert alert-success">
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                            {% for msg in app.session.flashBag.get('success') %}
                                                <i class="fa fa-check"></i> {{ msg }}
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <table class="table table-striped table-hover" id="zero_config">
                                <thead>
                                    <tr>
                                        <th>
                                            Nom & prenom
                                        </th>
                                        <th>
                                            E-mail
                                        </th>
                                        <th>
                                            Télephone
                                        </th>
                                        <th>
                                            Adresses
                                        </th>
                                        <th>Status</th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for member in members %}
                                        <tr>
                                            <td>{{member.nom}} {{member.nom}}</td>
                                            <td>{{member.email}}</td>
                                            <td>{{member.phone}}</td>
                                            <td>{{member.city}}</td>
                                            <td>
                                                <label class="checkbox-inline">
                                                    <input type="checkbox" class="status" data-url="{{path('marchand_members_status', {id:member.id})}}" data-toggle="toggle" {{member.enabled==1?'checked="true"':''}} data-on="Activé" data-off="Disactivé"> 
                                                  </label>
                                            </td>
                                            <td>
                                                <a href="{{ path('marchand_members_details', {id:member.id}) }}" class="btn btn-sm btn-primary"><i class="fa fa-search"></i></a>
                                                <a href="{{ path('marchand_members_edit', {id:member.id}) }}" class="btn btn-sm btn-warning"><i class="fa fa-pencil"></i></a>
                                                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteModal{{member.id}}"><i class="fa fa-trash"></i></button>

                                                <!-- Modal -->
                                                <div id="deleteModal{{member.id}}" class="modal fade" role="dialog">
                                                  <div class="modal-dialog">

                                                    <!-- Modal content-->
                                                    <div class="modal-content">
                                                      <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title" style="color: black;">Suppression membre</h4>
                                                      </div>
                                                      <div class="modal-body">
                                                          <div class="text-center">
                                                              <p style="color: black;">Etes-vous sùre de vouloir supprimer le membre <b>{{member.nom}} {{member.prenom}}</b>?</p>
                                                          </div>
                                                      </div>
                                                      <div class="modal-footer">
                                                        <a href="{{ path('marchand_members_delete', {id : member.id}) }}" class="btn btn-danger">
                                                             Oui
                                                        </a>
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Non</button>
                                                      </div>
                                                    </div>

                                                  </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
            <!-- END PAGE CONTENT INNER -->
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT -->
    </div>
{% endblock %}
