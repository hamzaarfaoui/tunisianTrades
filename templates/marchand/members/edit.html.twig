{% block title %}Tableau de bord | Paramétres membre{% endblock %}
{% block body %}>
    <div class="page-container">
        <!-- BEGIN PAGE HEAD -->
        <div class="page-head">
            <div class="container">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>{{member.nom}} {{member.nom}} : Paramétres</h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
        </div>
        <!-- END PAGE HEAD -->
        <!-- BEGIN PAGE CONTENT -->
        <div class="page-content">
            <div class="container">
                <div class="portlet light">
                    <!-- BEGIN PAGE BREADCRUMB -->
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <a href="{{ path('marchand_homepage') }}">Tableau de bord</a><i class="fa fa-circle"></i>
                        </li>
                        <li>
                            <a href="{{ path('marchand_members_index',{id:app.user.id}) }}">Membres</a><i class="fa fa-circle"></i>
                        </li>
                        <li class="active">
                            {{member.nom}} {{member.nom}} : Paramétres
                            
                        </li>
                    </ul>
                    <!-- END PAGE BREADCRUMB -->
                    <!-- BEGIN PAGE CONTENT INNER -->
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box green-haze">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-globe"></i>{{member.nom}} {{member.nom}} : Paramétres
                            </div>
                            <div class="tools">
                                {#<a href="{{ path('marchand_product_back_new', {id : store.id}) }}" style="color: #FFF;font-size: 14px;" title="ajouter un produit">
                                    <i class="fa fa-plus"></i> Ajouter
                                </a>#}
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="row">
                                <div class="col-md-12">
                                    {% if app.session.flashBag.has('success') %}
                                        <div class="alert alert-success">
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                            {% for msg in app.session.flashBag.get('success') %}
                                                <i class="fa fa-check"></i> {{ msg }}
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                                (<span style="color: red;">*</span> : Obligatoire)<br>
                            {{form_start(form)}}
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            {{ form_label(form.nom, "", {'label_attr': {'class': 'col-md-12'}}) }}
                                            <div class="col-md-12">
                                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            {{ form_label(form.prenom, "", {'label_attr': {'class': 'col-md-12'}}) }}
                                            <div class="col-md-12">
                                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            {{ form_label(form.username, "", {'label_attr': {'class': ''}}) }}<span style="color: red;margin-left: 10px;">*</span>
                                            <div class="col-md-12">
                                                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            {{ form_label(form.phone, "", {'label_attr': {'class': 'col-md-12'}}) }}
                                            <div class="col-md-12">
                                                {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                    </div>        
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            {{ form_label(form.email, "", {'label_attr': {'class': ''}}) }} <span style="color: red;margin-left: 10px;">*</span>
                                            <div class="col-md-12">
                                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                    </div>  
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_label(form.adress, "", {'label_attr': {'class': ''} }) }}
                                            <div class="col-md-12">
                                                {{ form_widget(form.adress, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                    </div>  
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_label(form.city, "", {'label_attr': {'class': ''} }) }}
                                            <div class="col-md-12">
                                                {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <br>    
                                        <div class="text-right">
                                            <button type="submit" class="btn btn-primary btn-sm">Enregistrer</button>
                                        </div>
                                    </div>
                                </div>
                            {{form_end(form)}}
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
            <!-- END PAGE CONTENT INNER -->
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT -->
    </div>
{% endblock %}
