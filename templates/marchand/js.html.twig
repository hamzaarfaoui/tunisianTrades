                error: function ()
                {
                    console.log("erreur de modification adresse");
                },
                beforeSend: function ()
                {

                },
                success: function (result)
                {
                    $('#editAdressModal'+id).modal('hide');
                    $('.adressText'+id).html(adress);
                    $('.adress-input'+id).html(adress);
                    console.log(result['message']);
                }
            });
        });
