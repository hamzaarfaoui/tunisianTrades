<script>
    jQuery(document).ready(function () {
        
        /*
         * add adess store 
         */
        $('.addAdressButton').click(function(){
            var store = $(this).data('store');
            var url = $(this).data('url');
            var adress = $('.adress-input').val();
            $.ajax({

                url: url,
                method: "GET",
                data: {adress: adress, store: store},
                error: function ()
                {
                    console.log("erreur de modification adresse");
                },
                beforeSend: function ()
                {

                },
                success: function (result)
                {
                    window.location = $('.redirect-url').val();
                }
            });
        });
