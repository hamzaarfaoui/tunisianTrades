                            {% else %}
                                <span class="badge badge-error" style="background-color: #f44336;">Faible</span>
                            {% endif %}
                            </p>
                            <p><strong>Boutique : </strong> {{ product.store.name }}</p>
                            <p>{{ product.content }}</p>
                            <div class="product-options">
                                {% for option in product.valeurs %}
                                    <ul class="size-option">
                                        <li><span class="text-uppercase">{{ option.caracteristique.name }}:</span></li>
                                        <li class="active"><a href="#">{{ option.name }}</a></li>
                                    </ul>
                                {% endfor %}
                            </div>

                            <div class="product-btns">
                                <button class="primary-btn add-to-cart" data-id="{{product.id}}"><i class="fa fa-shopping-cart"></i> Add to Cart</button>
                                <div class="pull-right">
                                    <button class="main-btn icon-btn add-to-favoris" data-id="{{product.id}}"><i class="fa fa-heart"></i></button>
                                    <button class="main-btn icon-btn"><i class="fa fa-exchange"></i></button>
                                    <button class="main-btn icon-btn"><i class="fa fa-share-alt"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
