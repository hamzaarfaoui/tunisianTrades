{% block stylesheets %}
    <!-- BEGIN PAGE LEVEL STYLES -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="{{ asset('template/assets/global/plugins/jqvmap/jqvmap/jqvmap.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('template/assets/global/plugins/morris/morris.css') }}" rel="stylesheet" type="text/css">
    <!-- END PAGE LEVEL PLUGIN STYLES -->
    <!-- BEGIN PAGE STYLES -->
    <link href="{{ asset('template/assets/admin/pages/css/tasks.css') }}" rel="stylesheet" type="text/css"/>
    <!-- END PAGE STYLES -->
    <!-- BEGIN THEME STYLES -->
    <!-- DOC: To use 'rounded corners' style just load 'components-rounded.css') }}' stylesheet instead of 'components.css') }}' in the below style tag -->
    <link href="{{ asset('template/assets/global/css/components-rounded.css') }}" id="style_components" rel="stylesheet" type="text/css">
    <link href="{{ asset('template/assets/global/css/plugins.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('template/assets/admin/layout3/css/layout.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('template/assets/admin/layout3/css/themes/default.css') }}" rel="stylesheet" type="text/css" id="style_color">
    <link href="{{ asset('template/assets/admin/layout3/css/custom.css') }}" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/select2/select2.css') }}"/>
    <!-- END PAGE LEVEL STYLES -->
{% endblock %}
{% block title %}Tableau de bord | {{product.name}}{% endblock %}
{% block body %}>
    <!-- BEGIN CONTENT -->
    <div class="page-container">
        <!-- BEGIN PAGE HEAD -->
        <div class="page-head">
            <div class="container">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>{{product.name}}</h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
        </div>
        <!-- END PAGE HEAD -->
        <!-- BEGIN PAGE CONTENT -->
        <div class="page-content">
            <div class="container">
                <div class="portlet light">
                    <!-- BEGIN PAGE BREADCRUMB -->
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <a href="{{ path('marchand_homepage') }}">Tableau de bord</a><i class="fa fa-circle"></i>
                        </li>
                        <li>
                            <a href="{{ path('marchand_product_index', {id:product.store.id}) }}">Produits</a><i class="fa fa-circle"></i>
                        </li>
                        <li class="active">
                            {{product.name}}
                            <input type="hidden" class="redirect-url" value="{{ path('marchand_stores_details',{id:product.store.id} ) }}">
                        </li>
                    </ul>
                    <!-- END PAGE BREADCRUMB -->
                    <!-- BEGIN PAGE CONTENT INNER -->
                    <div class="row">
                                        <div class="col-md-12">
                                            <!-- BEGIN EXAMPLE TABLE PORTLET-->
                                            <div class="portlet box green-haze">
                                                <div class="portlet-title">
                                                    <div class="caption">
                                                        <i class="fa fa-globe"></i>Produits
                                                    </div>
                                                    <div class="tools">
                                                        <a href="{{path('marchand_product_back_edit', {id : product.id})}}" style="color: #FFF;font-size: 14px;" title="ajouter un produit">
                                                            <i class="fa fa-pencil"></i> Modifier
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="portlet-body">
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            {% if app.session.flashBag.has('success') %}
                                                                <div class="alert alert-success">
                                                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                                                    {% for msg in app.session.flashBag.get('success') %}
                                                                        <i class="fa fa-check"></i> {{ msg }}
                                                                    {% endfor %}
                                                                </div>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                    <h1>{{product.name}}</h1>
                                                    <div class="text-center">
                                                        <img style="width: 300px;height: 250px;" src="{{ asset('uploads/products/images/') }}{{ product.image }}">
                                                        <br><br>
                                                        <h3><em>{{product.price}} TND</em></h3>
                                                    </div>
                                                    {% if(product.keywords|length>0) %}
                                                        <div class="text-center">
                                                            <h3>Mots cl√©s</h3>
                                                            {% for keyword in product.keywords %}
                                                                <span class="label label-sm label-success" style="margin: 5px;"><b>{{keyword.name}}</b></span>
                                                                    {% endfor %}
                                                        </div>
                                                    {% endif %}
                                                    <br><br>
                                                    <center>
                                                        <div style="background-color: #ECEFF1;padding: 5px;;width: 60%;border-radius: 10px;">
                                                            <div class="autoplay" style="margin: 30px">
                                                                {% for image in product.getMediasImages() %}
                                                                    <div>
                                                                        <img src="{{ asset('uploads/products/gallery/') }}{{ image.name }}" style="width: 80%;height: 100px;">
                                                                    </div>
                                                                {% endfor %}
                                                            </div>
                                                        </div>
                                                    </center>
                                                </div>
                                            </div>
                                            <!-- END EXAMPLE TABLE PORTLET-->
                                        </div>
                                    </div>
                    <!-- END PAGE CONTENT INNER -->
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT -->
    </div>
{% endblock %}
