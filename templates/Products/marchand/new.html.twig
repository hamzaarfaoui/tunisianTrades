{% block title %}Tableau de bord | Nouveau produit{% endblock %}
{% block body %}>
    <div class="page-container">
        <!-- BEGIN PAGE HEAD -->
        <div class="page-head">
            <div class="container">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>Nouveau priduit</h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
        </div>
        <!-- END PAGE HEAD -->
        <!-- BEGIN PAGE CONTENT -->
        <div class="page-content">
            <div class="container">
                <div class="portlet light">
                    <!-- BEGIN PAGE BREADCRUMB -->
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <a href="{{ path('marchand_homepage') }}">Tableau de bord</a><i class="fa fa-circle"></i>
                        </li>
                        <li class="active">
                            Nouveau produit
                            <input type="hidden" class="redirect-url" value="{{ path('marchand_stores_details',{id:store.id} ) }}">
                        </li>
                    </ul>
                    <!-- END PAGE BREADCRUMB -->
                    <!-- BEGIN PAGE CONTENT INNER -->
                    <div class="row">
                        <div class="col-md-12">
                            <form class="form-horizontal form-row-seperated" action="{{ path('marchand_product_back_new_traitement', {id : store.id}) }}" method="post" role="form" enctype="multipart/form-data">
                                <div class="portlet light">
                                    <div class="portlet-title">
                                        <div class="caption">
                                            <i class="icon-basket font-green-sharp"></i>
                                            <span class="caption-subject font-green-sharp bold uppercase">
                                                Produit </span>
                                            <span class="caption-helper">Nouveau</span>
                                        </div>
                                        <div class="actions btn-set">
                                            <a class="btn green-haze btn-circle" href="{{ path('marchand_product_index', {id : store.id}) }}">
                                                <i class="fa fa-list"></i> Tous </a>
                                        </div>
                                    </div>
                                    <div class="portlet-body">
                                        <div class="tabbable">
                                            <ul class="nav nav-tabs">
                                                <li class="active">
                                                    <a href="#tab_general" data-toggle="tab">
                                                        Infos générale </a>
                                                </li>
                                                <li>
                                                    <a href="#tab_meta" data-toggle="tab">
                                                        Images </a>
                                                </li>
                                                <li>
                                                    <a href="#tab_images" data-toggle="tab">
                                                        Caractéristiques
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#tab_reviews" data-toggle="tab">
                                                        Promotions
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#tab_keywords" data-toggle="tab">
                                                        Mots clés
                                                    </a>
                                                </li>
                                            </ul>
                                            <div class="tab-content no-space">
                                                <div class="tab-pane active" id="tab_general">
                                                    <div class="form-body">
                                                        <h3>Infos générale</h3>
                                                        <div class="row">
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    <label class="col-md-2 control-label">Nom: <span class="required">
                                                                            * </span>
                                                                    </label>
                                                                    <div class="col-md-10">
                                                                        <input type="text" class="form-control" name="nom" placeholder="">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    <label class="col-md-2 control-label">Prix: <span class="required">
                                                                            * </span>
                                                                    </label>
                                                                    <div class="col-md-10">
                                                                        <input type="number" class="form-control" name="price" placeholder="">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    <label class="col-md-2 control-label">Quantité: <span class="required">
                                                                            * </span>
                                                                    </label>
                                                                    <div class="col-md-10">
                                                                        <input type="number" class="form-control" name="qte" placeholder="">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    <label>Catégorie</label>
                                                                    <select id="cm" class="form-control">
                                                                        <option value="rien">Sélectionner une categorie</option>
                                                                        {% for cm in categoriesMere %}
                                                                            <option value="{{cm.id}}">{{cm.name}}</option>
                                                                        {% endfor %}
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group" style="margin-left: 10px">
                                                                    <label>Sous categorie</label>
                                                                    <select id="sc1" class="form-control" disabled="true">
                                                                        <option value="rien">Sélectionner une categorie</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group" style="margin-left: 10px">
                                                                    <label>Sous catégorie 2</label>
                                                                    <select id="sc2" class="form-control" disabled="true" name="sc">
                                                                        <option value="rien">Sélectionner une categorie</option>
                                                                    </select>
                                                                </div>
                                                            </div>        
                                                        </div>
                                                                    <div class="form-group" style="margin-left: 10px">
                                                            <label>Marque</label>
                                                            <select id="marque" class="form-control" disabled="true" name="marque">
                                                                <option value="rien">Sélectionner une marque</option>
                                                            </select>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label>Déscription</label>
                                                                    <textarea class="form-control" rows="3" name="descriptionC"></textarea>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                                <div class="tab-pane" id="tab_meta">
                                                    <h3>Images</h3>
                                                    <div class="col-md-12">
                                                        <label>Image d'ouveture</label> <br>
                                                        <div class="file-loading">
                                                            <input id="kv-explorer" class="document" name="iconeC" type="file" style="height:100px">
                                                        </div>
                                                        <br>
                                                        Autres Images <br>
                                                        <div class="file-loading">
                                                            <input id="file-fr" class="document" name="images[]" type="file" style="height:100px" multiple>
                                                        </div>
                                                        <!-- The table listing the files available for upload/download -->
                                                        <table role="presentation" class="table table-striped clearfix">
                                                            <tbody class="files">
                                                            </tbody>
                                                        </table>

                                                    </div>
                                                </div>
                                                <div class="tab-pane" id="tab_images">
                                                    <h3>Caractéristiques</h3>
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <div class="row">
                                                                {% for caracteristique in caracteristiques %}
                                                                    <div class="col-md-3">
                                                                        <h5>{{caracteristique.name}}</h5>
                                                                        {% for valeur in caracteristique.valeurs %}
                                                                            <div class="form-group">

                                                                                <input id="{{valeur.id}}" type="radio" name="valeur{{caracteristique.id}}" value="{{valeur.id}}">
                                                                                <label for="{{valeur.id}}">{{valeur.name}}</label>
                                                                            </div>
                                                                        {% endfor %}
                                                                    </div>
                                                                {% endfor %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="tab-pane" id="tab_reviews">
                                                    <h3>Promotion</h3>
                                                    <div id="phones">
                                                        <div class="blocPhone">
                                                            <div class="row">
                                                                <div class="col-md-4">
                                                                    Début <br>
                                                                    <input type="date" id="from" class="form-control" name="datedeb" placeholder="Date de début">
                                                                </div>
                                                                <div class="col-md-4">
                                                                    Fin<br>
                                                                    <input type="date" id="to" class="form-control" name="datefin" placeholder="Date de fin">
                                                                </div>
                                                                <div class="col-md-4">
                                                                    Montant<br>
                                                                    <input type="number" class="form-control" name="fixe" placeholder="Montant">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="tab-pane" id="tab_keywords">
                                                    <h3>Mots clés</h3>
                                                    <input id="tags_1" type="text" class="form-control tags" name="keywords"/>

                                                </div>
                                            </div>
                                        </div>
                                        <br>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-success pull-right">Enregistrer</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- END PAGE CONTENT INNER -->
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT -->
    </div>
{% endblock %}
