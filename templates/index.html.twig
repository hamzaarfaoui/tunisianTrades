                    <a class="banner banner-1" href="#">
                        <img src="{{asset('e-shop/img/banner10.jpg')}}" alt="" style="height: 180px;">
                        <div class="banner-caption text-center">
                            <h4 class="white-color">NEW COLLECTION</h4>
                        </div>
                    </a>
                </div>

            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>#}
