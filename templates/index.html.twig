    <!-- start categories -->
        {% include 'includes/front/index/categories.html.twig' %}
    <!-- end categories -->
   
{% endblock %}
{% block javascripts %}
<script>
    {% for categorie in sc2 %}
        $('#product-slick-{{categorie.id}}').slick({
    slidesToShow: 5,
    slidesToScroll: 1,
    autoplay: false,
    infinite: true,
    speed: 300,
    dots: true,
    arrows: false,
    appendDots: '.product-slick-dots-1',
    responsive: [{
        breakpoint: 991,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
        }
      },
      {
        breakpoint: 480,
        settings: {
          dots: false,
          arrows: true,
          slidesToShow: 1,
