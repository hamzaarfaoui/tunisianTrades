{% block title %}Tableau de bord | Nouvelle catégorie{% endblock %}
{% block body %}>
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <!-- BEGIN PAGE HEAD -->
            <div class="page-head">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>Marques <small>Ajout</small></h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
            <!-- END PAGE HEAD -->
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <a href="{{ path('backoffice_homepage') }}">Tableau de bord</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="{{ path('dashboard_marques_back_index') }}">Marques</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="{{ path('dashboard_marques_back_details', { id : marque.id }) }}">{{ marque.name }}</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="#">Paramétres</a>
                </li>
            </ul>
            <!-- END PAGE BREADCRUMB -->
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box green-haze">
                        <div class="portlet-title">
                            <div class="caption">
                                {{ marque.name }}
                            </div>
                            <div class="tools">
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <form action="{{ path('dashboard_marques_back_edit_traitement', { id : marque.id }) }}" method="post" role="form" enctype="multipart/form-data">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Nom</label>
                                                <input type="text" class="form-control" value="{{marque.name}}" placeholder="Nom" name="nom">
                                            </div>
                                            <select name="categorie" class="form-control">
                                                {% for categorie in categories %}
                                                    <option value="{{ categorie.id }}" {% if(marque.sousCategorie) %}{% if(categorie.id == marque.sousCategorie.id) %}selected{% endif %}{% endif %}>{{ categorie.name }}</option>
                                                {% endfor %}
                                            </select>
                                            <div class="form-group">
                                                <label>Déscription</label>
                                                <textarea class="form-control" rows="3" name="description">
                                                    {{marque.content}}
                                                </textarea>
                                            </div>
                                            
                                        </div>
                                        <div class="col-md-6">
                                            <label>Image</label> <br>
                                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                                <div class="input-group input-large">
                                                    <div class="form-control uneditable-input span3" data-trigger="fileinput">
                                                        <i class="fa fa-file fileinput-exists"></i>&nbsp; <span class="fileinput-filename">
                                                        </span>
                                                    </div>
                                                    <span class="input-group-addon btn default btn-file">
                                                        <span class="fileinput-new">
                                                            Sélectionner une image </span>
                                                        <span class="fileinput-exists">
                                                            Changer </span>
                                                        <input type="file" name="image">
                                                    </span>
                                                    <a href="javascript:;" class="input-group-addon btn red fileinput-exists" data-dismiss="fileinput">
                                                        Supprimer </a>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>URL de vidéo</label>
                                                <input type="text" class="form-control" value="{{marque.video}}" placeholder="URL de vidéo" name="video">
                                            </div>
                                            <button type="submit" class="btn btn-success" style="width: 100%;">Enregistrer</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
            <!-- END PAGE CONTENT-->
        </div>
    </div>
    <!-- END CONTENT -->
{% endblock %}
